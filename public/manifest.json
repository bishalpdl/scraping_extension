{
  "manifest_version": 3,
  "name": "New Vite",
  "version": "1.0.1",
  "description": "A simple Chrome extension example",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
   "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],"host_permissions": [
    "http://*/**", 
    "https://*/**"
  ]
}
